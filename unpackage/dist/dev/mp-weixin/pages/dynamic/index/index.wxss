
.content-main{
	width: 100%;
	height: 100%;
}
swiper{
	height: 100vh;
}
.topic .topic-content {
	width: 100%;
	margin: 0 auto;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	padding-left: 10rpx;
	-webkit-flex-wrap: nowrap;
	        flex-wrap: nowrap;
}
.topic-content .topic-item {
	width: 25%;
	margin-right: 20rpx;
	margin-top: 25rpx;
	text-align: center;
}
.topic-content .topic-item image {
	width: 100%;
}
.topic-content .topic-item text {
	font-size: 20rpx;
	color: #606266;
	margin-top: 15rpx;
}
.wrap {
	margin-top: 20rpx;
}
.wrap .water {
	border-radius: 8px;
	margin: 0 15rpx 15rpx 15rpx;
	/* padding: 8px; */
	position: relative;
	background-color: #FFFFFF;
}
.water .content-title {
	font-size: 30rpx;
	margin-top: 10rpx;
	margin-left: 10rpx;
}
.water .content-info {
	margin-top: 10rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row nowrap;
	        flex-flow: row nowrap;
	padding: 10rpx;
}
.content-info .content-author {
	font-size: 25rpx;
	color: rgb(112, 113, 114);
}
.content-info .content-like {
	font-size: 25rpx;
}
.content{
	width: 100%;
}
.content .content-item{
	width: 100%;
}
.content-item .content-header{
	margin-left: 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
}
.content-header .content-authorinfo{
	margin-top: 5rpx;
	margin-left: 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.content-header .content-authorinfo .content-user{
	font-size: 30rpx;
}
.content-header .content-authorinfo .content-level{
	font-size: 25rpx;
	color: #82848A;
}
.content-item .content-text{
	width: 90%;
	margin: 0 auto;
	margin-top: 10rpx;
	display: -webkit-box;
	-webkit-line-clamp: 3;
	-webkit-box-orient:vertical;
	overflow: hidden;
	text-overflow: ellipsis;
}
.content-item .content-imgs{
	width: 90%;
	margin: 0 auto;
	margin-top: 10rpx;
	height: 202rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.content-imgs .content-img{
	width: 30%;
	height: 200rpx;
}
.content-item .content-imgs::after{
	content:"";
	width: 30%;
}
.content-item .content-time{
	width: 90%;
	margin: 0 auto;
	margin-top: 10rpx;
	text-align: right;
	font-size: 25rpx;
	color: #909399;
}
.content-item .content-comment{
	width: 100%;
	margin-top: 10rpx;
	padding: 10rpx 40rpx;
	background-color: rgb(245,250,250);
}
.content-comment .comment-item{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.comment-item .comment-user{
	font-size: 25rpx;
	color: #2B85E4;
	font-weight: bold;
}
.comment-item .comment-text{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	word-break: break-all;
	margin-left: 10rpx;
	font-size: 25rpx;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient:vertical;
	overflow: hidden;
	text-overflow: ellipsis;
}

