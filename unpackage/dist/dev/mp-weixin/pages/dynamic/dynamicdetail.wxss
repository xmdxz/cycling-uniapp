
.content-item {
	width: 100%;
}
.content-item .content-header {
	margin-left: 30rpx;
	margin-top: 10rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
}
.content-header .content-authorinfo {
	margin-top: 20rpx;
	margin-left: 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.content-header .content-authorinfo .content-user {
	font-size: 35rpx;
}
.content-header .content-authorinfo .content-level {
	font-size: 25rpx;
	color: #82848A;
}
.content-item .content-text {
	width: 90%;
	font-size: 37rpx;
	margin: 0 auto;
	margin-top: 10rpx;
}
.content-item .content-imgs {
	width: 90%;
	margin: 0 auto;
	margin-top: 10rpx;
	height: 202rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.content-imgs .content-img {
	width: 30%;
	height: 200rpx;
}
.content-item .content-imgs::after {
	content: "";
	width: 30%;
}
.content-item .content-time {
	width: 90%;
	margin: 0 auto;
	margin-bottom: 10rpx;
	margin-top: 10rpx;
	text-align: right;
	font-size: 25rpx;
	color: #909399;
}
.content-item .content-comment {
	width: 100%;
	margin-top: 10rpx;
	padding: 10rpx 40rpx;
	background-color: rgb(245, 250, 250);
}
.comment{
	width: 100%;
}
.comment .comment-items{
	margin-top: 10rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.comment-items .comment-item .comment-header{
	width: 95%;
	margin: 0 auto;
	margin-top: 10rpx;
}
.comment-header .comment-user{
	margin-left: 10rpx;
	font-size: 30rpx;
	font-weight: bold;
	color: #2979FF;
}
.comment-item .comment-text{
	width: 80%;
	font-size: 33rpx;
	margin-left: 95rpx;
}
.comment-item .comment-time{
	margin-top: 20rpx;
	margin-left: 95rpx;
	color: #909399;
}

