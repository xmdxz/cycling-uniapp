
.content-item{
		width: 100%;
}
.content-item .content-header{
		margin-left: 30rpx;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-pack: start;
		-webkit-justify-content: flex-start;
		        justify-content: flex-start;
}
.content-header .content-authorinfo{
		margin-top: 5rpx;
		margin-left: 20rpx;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-orient: vertical;
		-webkit-box-direction: normal;
		-webkit-flex-direction: column;
		        flex-direction: column;
}
.content-header .content-authorinfo .content-user{
		font-size: 30rpx;
}
.content-header .content-authorinfo .content-level{
		font-size: 25rpx;
		color: #82848A;
}
.content-item .content-text{
		width: 90%;
		margin: 0 auto;
		margin-top: 10rpx;
		display: -webkit-box;
		-webkit-line-clamp: 3;
		-webkit-box-orient:vertical;
		overflow: hidden;
		text-overflow: ellipsis;
}
.content-item .content-imgs{
		width: 90%;
		margin: 0 auto;
		margin-top: 10rpx;
		height: 202rpx;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-pack: justify;
		-webkit-justify-content: space-between;
		        justify-content: space-between;
		-webkit-box-orient: horizontal;
		-webkit-box-direction: normal;
		-webkit-flex-direction: row;
		        flex-direction: row;
		-webkit-flex-wrap: wrap;
		        flex-wrap: wrap;
}
.content-imgs .content-img{
		width: 30%;
		height: 200rpx;
}
.content-item .content-imgs::after{
		content:"";
		width: 30%;
}
.content-item .content-time{
		width: 90%;
		margin: 0 auto;
		margin-top: 10rpx;
		text-align: right;
		font-size: 25rpx;
		color: #909399;
}
.content-item .content-comment{
		width: 100%;
		margin-top: 10rpx;
		padding: 10rpx 40rpx;
		background-color: rgb(245,250,250);
}
.content-comment .comment-item{
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
}
.comment-item .comment-user{
		font-size: 25rpx;
		color: #2B85E4;
		font-weight: bold;
}
.comment-item .comment-text{
		-webkit-box-flex: 1;
		-webkit-flex: 1;
		        flex: 1;
		word-break: break-all;
		margin-left: 10rpx;
		font-size: 25rpx;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient:vertical;
		overflow: hidden;
		text-overflow: ellipsis;
}

